<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Block Blast Clone</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background: #f0f0f0;
      margin: 0;
      padding: 20px;
    }

    h1 {
      margin-bottom: 10px;
    }

    #score {
      font-size: 18px;
      margin-bottom: 15px;
    }

    #game {
      display: grid;
      grid-template-columns: repeat(10, 40px);
      grid-gap: 2px;
      justify-content: center;
      margin: 0 auto;
    }

    .block {
      width: 40px;
      height: 40px;
      background-color: gray;
      cursor: pointer;
      border-radius: 4px;
      transition: transform 0.1s ease;
    }

    .block:hover {
      transform: scale(1.1);
    }

    .red { background-color: #e74c3c; }
    .green { background-color: #2ecc71; }
    .blue { background-color: #3498db; }
    .yellow { background-color: #f1c40f; }

    #game-over {
      margin-top: 20px;
      font-size: 24px;
      color: red;
    }

    button {
      margin-top: 15px;
      padding: 8px 15px;
      font-size: 16px;
    }
  </style>
</head>
<body>
  <h1>Block Blast Clone</h1>
  <div id="score">Score: 0</div>
  <div id="game"></div>
  <div id="game-over" style="display:none;">Game Over!</div>
  <button onclick="restartGame()">Restart Game</button>

  <script>
    const game = document.getElementById("game");
    const scoreDisplay = document.getElementById("score");
    const gameOverDisplay = document.getElementById("game-over");
    const rows = 10;
    const cols = 10;
    const colors = ["red", "green", "blue", "yellow"];
    let grid = [];
    let score = 0;

    function restartGame() {
      score = 0;
      updateScore();
      gameOverDisplay.style.display = "none";
      createGrid();
    }

    function createGrid() {
      game.innerHTML = '';
      grid = [];

      for (let row = 0; row < rows; row++) {
        let currentRow = [];
        for (let col = 0; col < cols; col++) {
          const color = colors[Math.floor(Math.random() * colors.length)];
          currentRow.push(color);
          const block = document.createElement("div");
          block.className = `block ${color}`;
          block.dataset.row = row;
          block.dataset.col = col;
          block.addEventListener("click", handleClick);
          game.appendChild(block);
        }
        grid.push(currentRow);
      }
    }

    function handleClick(e) {
      const row = parseInt(e.target.dataset.row);
      const col = parseInt(e.target.dataset.col);
      const targetColor = grid[row][col];
      if (!targetColor) return;

      const connected = findConnectedBlocks(row, col, targetColor);

      if (connected.length >= 2) {
        for (const [r, c] of connected) {
          grid[r][c] = null;
        }
        score += connected.length * 10;
        updateScore();
        collapseBlocks();
        updateDisplay();

        if (!hasMoves()) {
          gameOverDisplay.style.display = "block";
        }
      }
    }

    function findConnectedBlocks(row, col, color, visited = {}) {
      const key = `${row},${col}`;
      if (
        row < 0 || row >= rows ||
        col < 0 || col >= cols ||
        grid[row][col] !== color ||
        visited[key]
      ) return [];

      visited[key] = true;

      let result = [[row, col]];
      const directions = [[1,0], [-1,0], [0,1], [0,-1]];
      for (const [dr, dc] of directions) {
        result = result.concat(findConnectedBlocks(row + dr, col + dc, color, visited));
      }
      return result;
    }

    function collapseBlocks() {
      for (let col = 0; col < cols; col++) {
        let column = [];
        for (let row = rows - 1; row >= 0; row--) {
          if (grid[row][col] !== null) {
            column.push(grid[row][col]);
          }
        }
        for (let row = rows - 1; row >= 0; row--) {
          grid[row][col] = column[rows - 1 - row] || null;
        }
      }
    }

    function updateDisplay() {
      const blocks = document.querySelectorAll(".block");
      blocks.forEach(block => {
        const row = parseInt(block.dataset.row);
        const col = parseInt(block.dataset.col);
        const color = grid[row][col];
        block.className = "block";
        if (color) {
          block.classList.add(color);
          block.style.visibility = "visible";
        } else {
          block.style.visibility = "hidden";
        }
      });
    }

    function updateScore() {
      scoreDisplay.textContent = "Score: " + score;
    }

    function hasMoves() {
      for (let row = 0; row < rows; row++) {
        for (let col = 0; col < cols; col++) {
          const color = grid[row][col];
          if (!color) continue;

          const connected = findConnectedBlocks(row, col, color, {});
          if (connected.length >= 2) return true;
        }
      }
      return false;
    }

    // Start game on load
    createGrid();
  </script>
</body>
</html>
